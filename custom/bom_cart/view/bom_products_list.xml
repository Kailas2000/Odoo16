<odoo>
    <template id="bom_products_cart" inherit_id="website_sale.cart_lines" name="BOM Product List">
         <xpath expr="//td[hasclass('td-product_name')]" position="inside">
             <div>
                 <t t-foreach="bom_line_products" t-as="bom_products">
                     <span t-if="bom_products['product_id'] == line.product_template_id.id">
                         <t t-foreach="bom_products['bom_products']" t-as="products_list">
                            <t t-esc="products_list"/><br/>
                         </t>
                     </span>
                 </t>
             </div>
         </xpath>
    </template>
</odoo>