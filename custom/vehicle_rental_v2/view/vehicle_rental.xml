<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--    search View-->
    <record id="vehicle_rental_v2_search" model="ir.ui.view">
        <field name="name">vehicle.rental.search</field>
        <field name="model">vehicle.rental</field>
        <field name="arch" type="xml">
            <search>
                <field name="brand"/>
                <field name="name"/>
                <filter string="Available" name="defa_state"
                        domain="[('state', 'in', ['available'])]"/>
                <filter string="Not Available" name="state"
                        domain="[('state', 'in', ['not available'])]"/>
                <group expand="0" string="group by">
                    <filter name="brand"
                            context="{'group_by':'brand','residual_visible':True}"/>
                    <filter name="model"
                            context="{'group_by':'model','residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>

    <!--    Tree View-->
    <record id="vehicle_rental_v2_tree_view" model="ir.ui.view">
        <field name="name">vehicle.rental.tree</field>
        <field name="model">vehicle.rental</field>
        <field name="arch" type="xml">
            <tree string="Rental">
                <field name="vehicle_id"/>
                <field name="name"/>
                <field name="brand"/>
                <field name="model" optional="hide"/>
                <field name="rent" optional="hide"/>
            </tree>
        </field>
    </record>

    <!--Form View    -->
    <record id="vehicle_rental_v2_form_view" model="ir.ui.view">
        <field name="name">vehicle.rental.form</field>
        <field name="model">vehicle.rental</field>
        <field name="arch" type="xml">
            <form string="Rental">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_requests" type="object"
                                class="oe_stat_button" icon="fa-road">
                            <field name="request_count" widget="statinfo"
                                   string="Requests"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="vehicle_id"/>
                            <field name="name"/>
                            <field name="brand"/>
                        </group>
                        <group>
                            <field name="model"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="rent" widget='monetary'
                                   options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                            <field name="state" invisible="1"/>
                            <field string="Vehicle" name="request_count"
                                   widget="statinfo" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Rent Request">
                            <field name="confirm_request_id">
                                <tree>
                                    <field name="customer_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Rent Charge">
                            <field name="rent_charge_id">
                                <tree string="Rent" editable="bottom">
                                    <field name="time"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>